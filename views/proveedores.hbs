<!DOCTYPE html>
<html>
  <head>
    <title>Listado de Proveedores</title>
     <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f1f1f1;
    }
    .container {
      text-align: center;
      margin-top: 100px;
    }
    h1 {
      font-size: 48px;
      color: #333;
      margin-bottom: 20px;
      text-align: center;
    }
    p {
      font-size: 18px;
      color: #666;
      margin-bottom: 30px;
    }
    a {
      text-decoration: none;
      color: #007bff;
      text-align: center;
      justify-items: center;
      align-items: center;
    }
  </style>
  </head>
  <body>
    <h1>Listado de Proveedores</h1>
    <a href="/">Ir a la página principal</a>
    <table>
      <thead>
        <tr>
          <th>ID Proveedor</th>
          <th>Nombre Compañía</th>
          <th>Nombre Contacto</th>
          <th>Título Contacto</th>
          <th>Ciudad</th>
          <th>País</th>
        </tr>
      </thead>
      <tbody>
        {{#each proveedores}}
        <tr>
          <td>{{this.idProveedor}}</td>
          <td>{{this.nombreCompania}}</td>
          <td>{{this.nombreContacto}}</td>
          <td>{{this.tituloContacto}}</td>
          <td>{{this.ciudad}}</td>
          <td>{{this.pais}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
